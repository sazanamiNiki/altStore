---
const base = import.meta.env.BASE_URL;
---
<header class="bg-white shadow-sm border-b border-sky-100 relative">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between">
    <a href={base} class="flex items-center gap-2 sm:gap-3 font-bold text-sm sm:text-xl text-sky-600">
      <img src={`${base}assets/img/buncho_logo.svg`} alt="bunchoniki Store" class="h-8 w-auto" />
      <span>bunchoniki Store</span>
    </a>
    <ul class="hidden md:flex gap-8">
      <li><a href={base} class="text-gray-700 hover:text-sky-600 transition">ホーム</a></li>
      <li><a href={`${base}apps`} class="text-gray-700 hover:text-sky-600 transition">アプリ</a></li>
      <li><a href={`${base}articles/`} class="text-gray-700 hover:text-sky-600 transition">記事</a></li>
      <li><a href={`${base}articles/faq`} class="text-gray-700 hover:text-sky-600 transition">FAQ</a></li>
    </ul>
    <button id="menu-toggle" class="md:hidden text-gray-700" aria-label="メニューを開く">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </nav>
  <nav id="mobile-menu" class="hidden md:hidden bg-white border-t border-sky-100 absolute top-full left-0 right-0 shadow-lg z-50">
    <ul class="flex flex-col gap-4 p-4">
      <li><a href={base} class="text-gray-700 block w-full hover:text-sky-600 transition">ホーム</a></li>
      <li><a href={`${base}apps`} class="text-gray-700 block w-full hover:text-sky-600 transition">アプリ</a></li>
      <li><a href={`${base}articles/`} class="text-gray-700 block w-full hover:text-sky-600 transition">記事</a></li>
      <li><a href={`${base}articles/faq`} class="text-gray-700 block w-full hover:text-sky-600 transition">FAQ</a></li>
    </ul>
  </nav>
</header>

<script>
  const toggle = document.getElementById('menu-toggle');
  const menu = document.getElementById('mobile-menu');
  if (toggle && menu) {
    toggle.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }
</script>
