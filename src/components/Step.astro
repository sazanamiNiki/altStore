---
interface Props {
  num: number;
  title: string;
  desc?: string;
}
const { num, title, desc } = Astro.props;
---

<div class="flex items-start gap-4">
  <span class="flex-shrink-0 w-7 h-7 rounded-full bg-blue-600 text-white text-xs font-bold flex items-center justify-center">
    {num}
  </span>
  <div class="pt-0.5">
    <div class="font-semibold text-gray-800 text-sm">{title}</div>
    {desc && <div class="text-gray-500 text-xs mt-0.5">{desc}</div>}
    <slot />
  </div>
</div>
